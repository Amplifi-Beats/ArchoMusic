<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="@android:color/transparent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/poggers"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/menu_title"
				android:textSize="18sp"
				android:textColor="#03A9F4"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/about"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginRight="8dp"
				android:src="@drawable/ic_menu_info"
				android:scaleType="fitCenter"
				android:layout_gravity="center_vertical"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/profile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/profile_icon"
				android:focusable="false"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:src="@drawable/ic_profile_icon"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/profile_name"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/profile_name_null"
				android:textSize="14sp"
				android:textColor="#000000"
				android:singleLine="true"
				android:layout_gravity="center_vertical"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/line"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#03A9F4"
			android:orientation="horizontal"/>
		<LinearLayout
			android:id="@+id/live_streaming"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/live_streaming_icon"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_stream"
				android:scaleType="fitCenter"
				android:layout_gravity="center_vertical"/>
			<TextView
				android:id="@+id/live_stream_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/menu_live_stream_title"
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/visualizer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/visualizer_icon"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_visualizer"
				android:scaleType="fitCenter"
				android:layout_gravity="center_vertical"/>
			<TextView
				android:id="@+id/visualizer_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/menu_visualizer_title"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/lyrics"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/lyrics_icon"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_lyrics"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/lyrics_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/menu_lyrics_title"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/settings_icon"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_settings"
				android:scaleType="fitCenter"/>
			<TextView
				android:id="@+id/settings_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/menu_settings_title"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
