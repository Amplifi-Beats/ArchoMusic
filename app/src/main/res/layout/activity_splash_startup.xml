<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/local_stream_title"
            android:textColor="#03A9F4"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_foreground" />

        <LinearLayout
            android:id="@+id/freefunk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/splash_startup_title"
                android:textSize="18sp"
                android:textColor="#03A9F4"/>
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="8dp"
                android:background="#03A9F4"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/freefunk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/profile_icon"
                    android:focusable="false"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile_icon"
                    android:scaleType="fitCenter"/>
                <EditText
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:background="#EEEEEE"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:hint="@string/create_a_profile_input_hint"
                    android:textColorHint="#607D8B"
                    android:singleLine="true"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#03A9F4"
            android:text="@string/splash_startup_btn_finish"
            android:textSize="12sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>